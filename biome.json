{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"javascript":{
		"formatter":{
			"semicolons": "asNeeded",
			"trailingComma": "all",
			"jsxQuoteStyle":"single",
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 80,
			"lineEnding": "lf"
		}
	}
}
